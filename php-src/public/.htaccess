RewriteEngine On

# CRITICAL: Force sitemap requests through PHP FIRST (before any file checks)
# This MUST come before the standard routing rules
RewriteCond %{REQUEST_URI} ^/sitemap\.xml$ [OR]
RewriteCond %{REQUEST_URI} ^/sitemaps/.*\.xml$
RewriteRule ^(.*)$ index.php [L,QSA]

# Standard routing for other files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]